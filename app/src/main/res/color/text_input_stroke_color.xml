<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Warna saat error -->
    <item android:color="#B00020" app:state_error="true"/>

    <!-- Warna saat focused (diklik/diketik)-->
    <item android:color="@color/orange" android:state_focused="true"/>

    <!-- Warna saat IDLE (default, belum diklik)-->
    <item android:color="@color/orange"/>
</selector>